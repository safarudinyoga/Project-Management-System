<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit Projects</title>
    <% include ../partials/header%>
</head>

<body>

    <% include ../partials/navbar%>

    <div class="container-fluid">
        <main role="main" class="pt-5 pt-sm-1">
            <div class="card border-light mx-1">
                <h3 class="card-header bg-transparent display-3" style="margin-top: 6vh;">Edit Project</h3>
                <div class="card-body">
                    <div class="card border-light">
                        <div class="card-body">
                            <form class="form-horizontal" action="" method="POST">
                                <div class="panel-body form-control-sm">
                                    <div class="form-group row">
                                        <h5 class="col-sm-2 col-form-label-lg">Name</h5>
                                        <div class="col-sm-5">
                                            <input type="text" class="form-control form-control-lg" id="name"
                                                placeholder="Projects Name" name="name" value="<%= item.nama %>">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <h5 class="col-sm-2 col-form-label-lg">Members</h5>
                                        <div class="col-sm-5">
                                            <% for (let i = 0; i < userdata.length; i++) { %>
                                            <div class="custom-control custom-checkbox">
                                                <input class="custom-control-input" type="checkbox" name="member"
                                                    id="checkbox<%= i %>" value="<%= userdata[i].userid %>"
                                                    <%= (item.member.includes(userdata[i].userid)) ? ' checked' : '' %>>
                                                <label class="custom-control-label" for="checkbox<%= i %>">
                                                    <%= userdata[i].fullname %>
                                                </label>
                                            </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-10">
                                            <button type="submit" class="btn btn-outline-success"><i class="fa fa-check"
                                                    aria-hidden="true"></i> Save</button>
                                            <button type="button" class="btn btn-outline-light"><a href="/projects"><i
                                                        class="fa fa-ban" aria-hidden="true"></i> Cancel</a></button>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <% include ../partials/footer%>
</body>

</html>