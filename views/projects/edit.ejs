<% include ../partials/header%>

<div class="container-fluid" style="margin-top: 20px" ; style="margin-left: 50px">
    <div class="panel panel-default">
        <h1 class="display-4">Edit Projects</h1>
    </div>
    <form class="form-horizontal" action="" method="POST">
        <div class="panel-divody form-control-sm">
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control form-control-sm" id="name" placeholder="Projects Name"
                        name="addpjname" value="<%= item.name %>">
                </div>
            </div>
            <div class="form-group row">
                <div for="inputPassword3" class="col-sm-2 col-form-label">Members</div>
                <div class="col-sm-5">
                    <% for (let i = 0; i < flname.length; i++) { %>
                    <div class="custom-check">
                        <input class="custom-check-input" type="checkbox" name="member" id="checkbox <%= i %>"
                            value="<%= [i+1] %>">
                        <label class="custom-check-label" for="checkbox<%= i %>">
                            <%= flname[i] %>
                        </label>
                    </div>
                    <% } %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-white"><a href="/projects">Cancel</a></button>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<% include ../partials/footer%>