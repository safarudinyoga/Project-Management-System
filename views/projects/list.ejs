<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Projects</title>
    <% include ../partials/header%>
</head>

<body>

    <% include ../partials/navbar%>
    <div class="container-fluid">
        <main role="main" class="pt-5 pt-sm-1">
            <div class="card border-light mx-1">
                <h3 class="card-header bg-transparent display-3" style="margin-top: 6vh;">Projects</h3>
                <div class="card-body">
                    <div class="card border-light">
                        <h4 class="card-title bg-transparent display-4">Filters</h4>
                        <div class="card-body">
                            <form class="form-horizontal" action="" method="GET">
                                <!-- ==================== FILTER ID ======================== -->

                                <div class="form-group row">
                                    <div class="custom-control custom-checkbox col-12 col-sm-2">
                                        <input type="checkbox" class="custom-control-input" aria-label="checkid" for=""
                                            id="customCheck1" name="checkid">
                                        <label class="custom-control-label" style="font-size: large" for="customCheck1"
                                            id="" <%= query.checkid ? ' checked' : '' %>>ID</label>
                                    </div>
                                    <div class="col-12 col-sm-9">
                                        <input type="text" class="form-control" id="id" placeholder="ID"
                                            name="projectid">
                                    </div>
                                </div>

                                <!-- ==================== FILTER NAME ======================== -->

                                <div class="form-group row">
                                    <div class="custom-control custom-checkbox col-12 col-sm-2">
                                        <input type="checkbox" class="custom-control-input" for="" id="customCheck2"
                                            name="checkname">
                                        <label class="custom-control-label" style="font-size: large" for="customCheck2" id="name"
                                            <%= query.checkname ? ' checked' : '' %>>Name</label>
                                    </div>
                                    <div class="col-12 col-sm-9">
                                        <input type="text" class="form-control" id="id" placeholder="Name"
                                            name="projectname">
                                    </div>
                                </div>

                                <!-- ==================== FILTER MEMBER ======================== -->

                                <div class="form-group row">
                                    <div class="custom-control custom-checkbox col-12 col-sm-2">
                                        <input type="checkbox" class="custom-control-input" for="" id="customCheck3"
                                            name="checkmember">
                                        <label class="custom-control-label" for="customCheck3" style="font-size: large" id="name"
                                            <%= query.checkmember ? ' checked' : '' %>>Member</label>
                                    </div>
                                    <div class="col-12 col-sm-9">
                                        <select class="form-control" id="member" name="member">
                                            <option disabled selected>Choose the Member ...</option>
                                            <% elemen.forEach((item, i) => { %>
                                            <option value="<%= item %>">
                                                <%= flname[i] %>
                                            </option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-outline-primary"><i class="fa fa-search"
                                                aria-hidden="true"> Search</i>
                                        </button>
                                        <button type="button" class="btn btn-light"> <a href="/projects"><i
                                                    class="fa fa-undo" aria-hidden="true"></i> Reset</a></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- ==================== OPTION ======================== -->

                <div class="card border-light mx-1">
                    <div class="card-body">
                        <div class="card border-light">
                            <h4 class="card-title bg-transparent display-4">Options</h4>
                            <div class="card-body">
                                <form action="" method="POST" class="form-check">
                                    <div class="form-group row">
                                        <h1 class="col-12 col-sm-3 display-4">
                                            Columns
                                        </h1>
                                        <div class="row col-12 col-sm-7">
                                            <div class="custom-control custom-checkbox col-12 col-sm-7">
                                                <input type="checkbox" name="projectid" class="custom-control-input"
                                                    id="opcheck1" value="true"
                                                    <%= option.projectid ? ' checked' : '' %>>
                                                <label class="custom-control-label" for="opcheck1" style="font-size: large">ID</label>
                                            </div>
                                            <div class="custom-control custom-checkbox col-12 col-sm-7">
                                                <input type="checkbox" name="projectname" class="custom-control-input"
                                                    id="opcheck2" value="true"
                                                    <%= option.projectname ? ' checked' : '' %>>
                                                <label class="custom-control-label" for="opcheck2" style="font-size: large">Name</label>
                                            </div>
                                            <div class="custom-control custom-checkbox col-12 col-sm-7">
                                                <input type="checkbox" name="members" class="custom-control-input"
                                                    id="opcheck3" value="true" <%= option.members ? ' checked' : '' %>>
                                                <label class="custom-control-label" for="opcheck3" style="font-size: large">Members</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-outline-info"><i class="fa fa-refresh"
                                                aria-hidden="true"></i> Apply</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ==================== TABLES ======================== -->

            <div class="card border-light mx-1">
                <div class="card-body">
                    <div class="card border-light">
                        <div class="card-body">
                            <div class="table-responsive table-responsive-sm table-responsive-md">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <%- option.projectid ? '<th scope="col">#</th>' : '' %>
                                            <%- option.projectname ? '<th scope="col">Name</th>' : '' %>
                                            <%- option.members ? '<th scope="col">Members</th>' : '' %>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.forEach((item) => { %>
                                        <tr>
                                            <!-- <%- option.projectid ? '<td>' + item.projectid + '</td>' : '' %> -->
                                            <% if(option.projectid) { %>
                                            <td><a href="projects/overview/<%=item.projectid%>" </a><%=item.projectid%>
                                                    </td> <% } %>
                                                    <%- option.projectname ? '<td>' + item.projectname + '</td>' : '' %>
                                                    <%- option.members ? '<td>' + item.fullname + '</td>' : '' %> <td>
                                                    <a href="/projects/edit/<%= item.projectid %>"
                                                        class="btn btn-outline-success"><i class="fa fa-pencil"
                                                            aria-hidden="true"></i> EDIT</a>
                                                    <a href="/projects/delete/<%= item.projectid %>"
                                                        class="btn btn-outline-danger">
                                                        <i class="fa fa-trash-o fa-lg"></i> DELETE</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <li class="page-item <%= page == 1 ? 'disabled': ''; %>"><a class="page-link"
                                                href="/projects?page=<%= parseInt(page) - 1%>"><i
                                                    class="fa fa-arrow-left" aria-hidden="true"></i> Previous</a></li>
                                        <% for (let i = 1; i <= pages; i++) { %>
                                        <li class="page-item <%= page == i ? 'active': ''; %>"><a class="page-link"
                                                href="/projects?page=<%= i %>">
                                                <%= i %></a></li>
                                        <% }; %>
                                        <li class="page-item <%= page == pages ? 'disabled': ''; %>"><a
                                                class="page-link" href="/projects?page=<%= parseInt(page) + 1%>"><i
                                                    class="fa fa-arrow-right" aria-hidden="true"></i> Next</a></li>
                                    </ul>
                                </nav>
                                <div class="col-sm-10">
                                    <a href="/projects/add">
                                        <button class="btn btn-outline-primary"><i class="fa fa-plus"
                                                aria-hidden="true"></i> Add Project
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <% include ../partials/footer%>
</body>

</html>