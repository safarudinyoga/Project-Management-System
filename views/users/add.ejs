<% include ../partials/header%>

<div class="container-fluid">
    <div class="card border-light mx-1">
        <h3 class="card-header bg-transparent display-3">Add User</h3>
        <div class="card-body">
            <div class="card border-light">
                <div class="card-body">
                    <form class="form-horizontal" action="" method="POST">
                        <div class="panel-body form-control-sm">
                            <!-- FORM ADD -->

                            <!-- ================= FIRST NAME ================ -->

                            <div class="form-group row">
                                <h5 class="col-sm-2 col-form-label-lg">Firstname</h5>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control form-control-lg" id="name"
                                        placeholder="Firstname" name="firstname" required>
                                </div>
                            </div>

                            <!-- ================= LAST NAME ================ -->

                            <div class="form-group row">
                                <h5 class="col-sm-2 col-form-label-lg">Last Name</h5>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control form-control-lg" id="name"
                                        placeholder="Lastname" name="lastname" required>
                                </div>
                            </div>

                            <!-- ================= EMAIL ================ -->

                            <div class="form-group row">
                                <h5 class="col-sm-2 col-form-label-lg">Email</h5>
                                <div class="col-sm-5">
                                    <input type="email" class="form-control form-control-lg" id="name"
                                        placeholder="example => admin@rubicamp.com" name="email"
                                        style="font-style: italic" required>
                                </div>
                            </div>

                            <!-- ================= PASSWORD ================ -->

                            <div class="form-group row">
                                <h5 class="col-sm-2 col-form-label-lg">Password</h5>
                                <div class="col-sm-5">
                                    <input type="password" class="form-control form-control-lg" id="name"
                                        placeholder="Password" name="password" required>
                                </div>
                            </div>

                            <!-- ================= POSITION ================ -->

                            <fieldset class="form-group">
                                <div class="form-group row">
                                    <h5 for="gridRadios" class="col-sm-2 col-form-label-lg ">Position</h5>
                                    <div class="col-sm-5">
                                        <div class="custom-control custom-radio">
                                            <input class="custom-control-input" type="radio" name="role"
                                                id="gridRadios1" value="Manager" required>
                                            <label class="custom-control-label" for="gridRadios1">
                                                Manager
                                            </label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input class="custom-control-input" type="radio" name="role"
                                                id="gridRadios2" value="Software Developer" required>
                                            <label class="custom-control-label" for="gridRadios2">
                                                Software Developer
                                            </label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input class="custom-control-input" type="radio" name="role"
                                                id="gridRadios3" value="Quality Assurance" required>
                                            <label class="custom-control-label" for="gridRadios3">
                                                Quality Assurance
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <!-- ================= TYPE JOB ================ -->

                            <div class="form-group row">
                                <h5 class="col-sm-2 col-form-label-lg ">Type</h5>
                                <div class="col-12 col-sm-7">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" name="typejob" type="checkbox" id="typejob"
                                            value="true">
                                        <label class="custom-control-label" for="typejob">
                                            Full-Time
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-success">Save</button>
                                    <button type="button" class="btn btn-white"><a href="/users">Cancel</a></button>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer%>